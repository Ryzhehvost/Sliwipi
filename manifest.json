{
  "manifest_version": 2,

  "name": "Sliwipi",
  "description": "__MSG_ext_desc__",
  "version": "1.3.1",

  "background": {
    "scripts": ["js/background-script.js"],
    "persistent": true
  },


  "browser_specific_settings": {
    "gecko": {
      "id": "Sliwipi@example.com"
    }
  },

  "web_accessible_resources": [
    "css/common.css",
    "css/library-performance.css",
    "js/BuildGameRow-injectable.js",
    "js/pagination.js",
    "js/thenBy.js",
    "js/is-in-viewport.js",
    "js/debounce.js",
    "js/dom-i18n.js",
    "js/library-performance-injectable.js",
    "js/library-performance.js",
    "_locales/*",
    "html/library.html"
  ],

  "icons": {
    "32": "icon/32.png",
    "128": "icon/128.png"
  },

  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon/popup.png",
    "default_popup": "html/options.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://steamcommunity.com/*/games/?tab=all*",
        "*://steamcommunity.com/*/games?tab=all*"
      ],
      "js": [
        "js/BuildGameRow.js",
        "js/cookies.js",
        "js/get-data-by-event.js",
        "js/constants.js",
        "js/jquery.min.js",
        "js/storage.js",
        "js/settings-change-listener.js",
        "js/library-performance.js"
      ],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "*://steamcommunity.com/*/games*",
    "*://store.steampowered.com/about*",
    "*://store.steampowered.com/api/*"
  ],

  "default_locale": "en"
}