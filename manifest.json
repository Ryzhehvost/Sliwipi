{
  "manifest_version": 2,

  "name": "Sliwipi",
  "description": "This extension is supposed to drastically reduce the stuttering when trying to view someone's big library or wishlist on Steam.",
  "version": "1.3.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "Sliwipi@example.com"
    }
  },

  "web_accessible_resources": [
    "css/common.css",
    "css/library-performance.css",
    "js/BuildGameRow-injectable.js",
    "js/pagination.js",
    "js/thenBy.js",
    "js/is-in-viewport.js",
    "js/debounce.js",
    "js/library-performance-injectable.js",
    "js/library-performance.js",
    "html/library.html"
  ],

  "icons": {
    "32": "icon/32.png",
    "128": "icon/128.png"
  },

  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon/popup.png",
    "default_popup": "html/options.html"
  },

  "content_scripts": [
    {
      "matches": [
        "*://steamcommunity.com/*/games/?tab=all*",
        "*://steamcommunity.com/*/games?tab=all*"
      ],
      "js": [
        "js/BuildGameRow.js",
        "js/get-data-by-event.js",
        "js/constants.js",
        "js/storage.js",
        "js/library-performance.js"
      ],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "storage",
    "*://steamcommunity.com/*/games*"
  ]

}